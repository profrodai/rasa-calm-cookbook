# recipes/level-2-intermediate/sovereign-voice-assistant/.env.example
# Voice Assistant Environment Variables

# Required - Rasa License
RASA_LICENSE=your-rasa-pro-license-key-here

# Required - LLM Provider (choose one)
OPENAI_API_KEY=your-openai-api-key-here
# OR Azure
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
# OR Local
LOCAL_LLM_ENDPOINT=http://localhost:8000/v1

# Optional - Development Settings
LOG_LEVEL=INFO
DEBUG=false
RASA_TELEMETRY_ENABLED=false

# Optional - Voice Settings
VOICE_SILENCE_TIMEOUT=7
VOICE_ENDPOINTING_MS=400